<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="proximity" class="hu.ismicro.commons.proximity.base.ProximityImpl">
		<property name="repositories">
			<list>
				<ref local="ibiblio"/>
				<ref local="ismicro"/>
			</list>
		</property>
		<property name="indexer" ref="indexer"/>
	</bean>
	
	<bean id="indexer" class="hu.ismicro.commons.proximity.base.indexer.LuceneIndexer">
		<property name="indexDirectory" value="/home/cstamas/tmp/proximity/index" />
	</bean>

	<bean id="ibiblio" class="hu.ismicro.commons.proximity.base.RepositoryImpl">
		<property name="id" value="www-ibiblio-org"/>
		<property name="localStorage" ref="ibiblioFSStorage"/>
		<property name="remoteStorage" ref="ibiblioHTTPPeer"/>
		<property name="indexer" ref="indexer"/>
		<property name="repositoryLogic">
			<bean class="hu.ismicro.commons.proximity.base.logic.MavenProxyLogic">
				<property name="pomExpirationPeriod" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="ibiblioFSStorage" class="hu.ismicro.commons.proximity.base.local.WritableFileSystemStorage">
		<property name="baseDir" value="/home/cstamas/tmp/proximity/ibiblio"/>
	</bean>
	
	<bean id="ibiblioHTTPPeer" class="hu.ismicro.commons.proximity.base.remote.HttpClientRemotePeer">
		<property name="remoteUrl" value="http://www.ibiblio.org/maven2/"/>
		<property name="connectionTimeout" value="30000"/>
	</bean>

	<bean id="ismicro" class="hu.ismicro.commons.proximity.base.RepositoryImpl">
		<property name="id" value="ISmicro Local"/>
		<property name="localStorage" ref="ismicroFSStorage"/>
	</bean>

	<bean id="ismicroFSStorage" class="hu.ismicro.commons.proximity.base.local.ReadOnlyFileSystemStorage">
		<property name="baseDir" value="/home/cstamas/tmp/proximity/ismicro"/>
		<property name="metadataAware" value="false"/>
	</bean>

</beans>

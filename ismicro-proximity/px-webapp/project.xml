      <version>1.2.6</version>
      <type>jar</type>
      <url>http://www.springframework.org/</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-beans</artifactId>
      <version>1.2.6</version>
      <type>jar</type>
      <url>http://www.springframework.org/</url>
      <properties>
        <war.bundle>true</war.bundle>
